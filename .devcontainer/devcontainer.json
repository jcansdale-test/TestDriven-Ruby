
{   // See https://docs.microsoft.com/en-us/visualstudio/online/reference/configuring

    // Install Ruby and TestDriven extensions
    "extensions": [
        "rebornix.Ruby",
        "JamieCansdale.testdriven"
    ],
  
    "settings": {
        "ruby.useLanguageServer": true // Required by TestDriven
    },

    "dockerFile": "Dockerfile",
  
    // Run Bash script in .devcontainer directory
    "postCreateCommand": "/bin/bash ./.devcontainer/post-create.sh > ~/post-create.log"
  }
  